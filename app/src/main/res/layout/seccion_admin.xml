<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Admin_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SecciÃ³n de administrador de contenido"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"/>

        <TextView
            android:id="@+id/ced_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:paddingTop="15dp"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRUD Eventos"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:paddingTop="20dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Agregar evento"
            android:textSize="12dp"
            app:icon="@android:drawable/ic_menu_add"
            app:iconTint="#FFFFFF" />

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="73dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_id_title"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="TextView" />

            <Button
                android:id="@+id/edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#448AFF"
                android:padding="15dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#FF0B0B"
                android:padding="15dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@color/black" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>